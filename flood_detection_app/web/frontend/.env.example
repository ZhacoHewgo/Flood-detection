# 积水车辆检测系统 - Web前端环境配置示例
# Flood Vehicle Detection System - Web Frontend Environment Configuration Example

# 应用配置
REACT_APP_NAME="积水车辆检测系统"
REACT_APP_VERSION="2.0.0"

# API配置
REACT_APP_API_URL=http://localhost:8000
REACT_APP_API_TIMEOUT=30000

# 服务器配置
PORT=3000
HOST=0.0.0.0

# 构建配置
GENERATE_SOURCEMAP=false
BUILD_PATH=build

# 功能开关
REACT_APP_ENABLE_PERFORMANCE_MONITOR=true
REACT_APP_ENABLE_BATCH_UPLOAD=true
REACT_APP_ENABLE_CACHE_MANAGEMENT=true
REACT_APP_ENABLE_EXPORT=true

# 上传配置
REACT_APP_MAX_FILE_SIZE=52428800  # 50MB
REACT_APP_MAX_BATCH_SIZE=50
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/bmp,image/tiff

# UI配置
REACT_APP_THEME=dark
REACT_APP_LANGUAGE=zh-CN
REACT_APP_ENABLE_ANIMATIONS=true

# 监控配置
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ANALYTICS_ID=

# 开发配置
REACT_APP_DEBUG=false
REACT_APP_MOCK_API=false

# PWA配置
REACT_APP_ENABLE_PWA=true
REACT_APP_PWA_NAME="积水车辆检测"
REACT_APP_PWA_SHORT_NAME="FloodDetection"

# 缓存配置
REACT_APP_CACHE_DURATION=3600000  # 1小时
REACT_APP_ENABLE_SERVICE_WORKER=true
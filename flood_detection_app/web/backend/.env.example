# 积水车辆检测系统 - Web后端环境配置示例
# Flood Vehicle Detection System - Web Backend Environment Configuration Example

# 应用配置
APP_NAME="积水车辆检测系统"
APP_VERSION="2.0.0"
DEBUG=false
LOG_LEVEL=INFO

# 服务器配置
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=false

# 模型配置
MODEL_PATH=../../../models
DEFAULT_VEHICLE_MODEL="YOLOv11 Car Detection"
DEFAULT_WATER_MODEL="DeepLabV3 Water Segmentation"

# 缓存配置
CACHE_SIZE=100
CACHE_TTL_HOURS=24
ENABLE_CACHE=true

# 性能配置
MAX_WORKERS=6
MAX_FILE_SIZE=52428800  # 50MB
MAX_BATCH_SIZE=50
REQUEST_TIMEOUT=300

# 安全配置
SECRET_KEY=your-secret-key-here
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
ENABLE_CORS=true

# 数据库配置（如果需要）
DATABASE_URL=sqlite:///./flood_detection.db
ENABLE_DATABASE=false

# Redis配置（如果需要）
REDIS_URL=redis://localhost:6379/0
ENABLE_REDIS=false

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9000

# 日志配置
LOG_FILE=logs/app.log
LOG_ROTATION=10MB
LOG_RETENTION=30

# GPU配置
CUDA_VISIBLE_DEVICES=0
ENABLE_GPU=true

# 开发配置
DEVELOPMENT_MODE=false
ENABLE_PROFILING=false
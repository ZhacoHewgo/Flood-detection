# 后端环境配置示例文件
# 复制此文件为 .env 并根据实际情况修改配置

# 应用配置
APP_NAME=积水车辆检测API
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=info

# 服务器配置
HOST=0.0.0.0
PORT=8000
WORKERS=1

# 模型配置
MODELS_DIR=./models
MODEL_CACHE_SIZE=2

# 文件上传配置
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=jpg,jpeg,png,bmp,tiff,tif

# CORS配置
CORS_ORIGINS=http://localhost:3000,http://localhost:80
CORS_ALLOW_CREDENTIALS=true

# 安全配置
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 数据库配置 (如果需要)
DATABASE_URL=sqlite:///./flood_detection.db

# Redis配置 (如果需要缓存)
REDIS_URL=redis://localhost:6379

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090